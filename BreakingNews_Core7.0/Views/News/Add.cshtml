@using BreakingNews_Core7._0.Models.Entity;
@model News
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Haber Ekle</h3>

<form method="post" enctype="multipart/form-data">
<input asp-for="ImageURL" hidden />
<div class="row">
    <div class="col-10">
        <div class="border p-3 mt-5">
            <div class="mb-3">
                <label asp-for="Title" class="p-0"></label>
                    <input asp-for="Title" class="form-control" placeholder="Başlık giriniz" />
            </div>
                <div class="mb-3">
                    <label asp-for="Content" class="p-0"></label>
                    <textarea asp-for="Content" class="form-control" placeholder="İçerik giriniz"></textarea>
                </div>
                <div class="mb-3">
                    <label asp-for="CategoryID" class="p-0"></label>
                    <select asp-for="CategoryID" asp-items="ViewBag.CategoryList" class="form-select"></select>
                </div>
                <div class="mb-3">
                    <label asp-for="Date" class="p-0"></label>
                    <input asp-for="Date" value="@DateTime.Now.ToShortDateString()" class="form-control" />
                </div>
                <div class="mb-3">
                    <label asp-for="ImageURL" class="p-0"></label>
                    <input type="file" name="file" class="form-control" />
                </div>
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Haber Ekle</button>
    </div>
</div>
</form>
