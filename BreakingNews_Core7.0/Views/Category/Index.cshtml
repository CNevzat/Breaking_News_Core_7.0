@using BreakingNews_Core7._0.Models.Entity;
@model List<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Kategoriler</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Kategori Adı</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>
                    <a asp-controller="Category" asp-action="Update" asp-route-id="@item.CategoryID" type="button" class="btn btn-success">Update</a>
                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.CategoryID" type="button" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="row pt-3 pb-2">
    <div>
        <a asp-controller="Category" asp-action="Add" type="button" class="btn btn-primary">Add New Category</a>
    </div>
</div>

